<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="shbsEntities" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>models.CustomerEntity</class>
        <class>models.EmployeeEntity</class>
        <class>models.ItemEntity</class>
        <class>models.LoansEntity</class>
        <class>models.Order1Entity</class>
        <class>models.OrderitemEntity</class>
        <class>models.VehicleEntity</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:oracle:thin:@//localhost:1521/XE"/>
            <property name="eclipselink.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
            <property name="eclipselink.jdbc.user"/>
            <property name="eclipselink.jdbc.password"/>
        </properties>
    </persistence-unit>
</persistence>
